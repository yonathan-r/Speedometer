<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/horizonatal_line_lot"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:background="#333333">
       
       <LinearLayout android:id="@+id/lyt_pane_top_bar"
                     android:layout_width="fill_parent"
       				 android:layout_height="wrap_content"
       				 android:background="#191919">
       				 <TextView android:id="@+id/txtbx_lbl_pane_title"
       				     	   android:layout_width="match_parent"
       						   android:layout_height="match_parent"
       						   android:layout_marginStart="15dp"
       				           android:layout_marginEnd="15dp"
       						   android:textSize="28sp"
       						   android:textStyle="bold"
       						   android:textColor="#B2B2B2"
       						   android:text="PaneTitle" />
           
       </LinearLayout>
       <LinearLayout android:layout_width="match_parent"
       				 android:layout_height="wrap_content"
       				 android:layout_marginLeft="15dp"
       				 android:layout_marginRight="15dp">
       				 <TextView android:id="@+id/txtbx_lbl_pane_subtitle"
       				           android:layout_width="wrap_content"
       						   android:layout_height="wrap_content"
       						   android:textSize="20sp"
       						   android:textColor="#B2B2B2"
       						   android:text="PaneSubtitle" />
           
       </LinearLayout>
       <RelativeLayout android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="5dp"
                       android:layout_marginBottom="2dp"
                       android:layout_marginLeft="15dp"
       				   android:layout_marginRight="15dp">
       	   <TextView android:id="@+id/txtbx_lbl_measurement_value"
       				     	   android:layout_width="wrap_content"
       						   android:layout_height="wrap_content"
       						   android:textSize="35sp"
       						   android:textColor="#B2B2B2"
       						   android:text="Value" />
          
           <TextView android:id="@+id/txtbx_lbl_measurement_unit"
       				     	   android:layout_width="wrap_content"
       						   android:layout_height="wrap_content"
       						   android:layout_toRightOf="@id/txtbx_lbl_measurement_value"
       						   android:layout_toEndOf="@id/txtbx_lbl_measurement_value"
       						   android:textSize="12sp"
       						   android:textColor="#ffffff"
       						   android:text="Unit" />
       </RelativeLayout>
     
       <LinearLayout android:id="@+id/lyt_chart"
                     android:layout_width="match_parent"
       				 android:layout_height="match_parent"
       				 android:orientation="vertical"/>
</LinearLayout>